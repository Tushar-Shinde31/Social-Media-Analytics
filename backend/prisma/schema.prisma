// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  created_at DateTime @default(now())

  socialAccounts SocialAccount[]
  instagramPosts InstagramPost[]
}

model SocialAccount {
  id           Int      @id @default(autoincrement())
  platform     String
  accessToken  String?
  refreshToken String?
  connectedAt  DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@unique([userId, platform])
}

model InstagramPost {
  id            String   @id            // Instagram post ID
  caption       String?
  mediaUrl      String
  mediaType     String   // IMAGE, VIDEO, CAROUSEL_ALBUM
  likeCount     Int
  commentCount  Int
  timestamp     DateTime

  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// Daily post metrics snapshot
model IgPostMetricDaily {
  id           Int      @id @default(autoincrement())
  postId       String
  likeCount    Int
  commentCount Int
  capturedAt   DateTime @default(now())
}

/// Daily platform-level metrics snapshot
model PlatformMetricDaily {
  id         Int      @id @default(autoincrement())
  platform   String
  userId     Int
  followers  Int?
  posts      Int?
  capturedAt DateTime @default(now())
}
